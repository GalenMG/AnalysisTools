O = '' # letter options, enter the center letter first followed by the surrounding letters in any order
alpha = 'abcdefghijklmnopqrstuvwxyz'
L=[]
notL=[]
for i in range(len(O)):
    L.append(O[i])
for i in range(len(alpha)):
    if alpha[i] not in L:
        notL.append(alpha[i])

# this text file is a list of words in the english language. Here are some: https://github.com/dwyl/english-words
with open("wordsEN.txt") as word_file:
    english_words = set(word.strip().lower()for word in word_file)

words = []
wordlist = list(english_words)
for i in range(len(wordlist)):
    exclude = False
    if L[0] in wordlist[i]:
        for j in range(len(notL)):
            if notL[j] in wordlist[i]:
                exclude = True
        if len(wordlist[i])<4:
            exclude = True
        if exclude == False:
            words.append(wordlist[i])            
print(words)
